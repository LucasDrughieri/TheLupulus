<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://thelupulus.mysql.database.azure.com:3306/thebeermanagement</property>
        <property name="hibernate.connection.username">thebeeradmin@thelupulus</property>
        <property name="hibernate.connection.password">Admin123$</property>
        <property name="show_sql">true</property>

        <!-- Specifying Session Context -->
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

        <!-- Mapping With Model Class Containing Annotations -->
        <mapping class="app.entities.Client" />
        <mapping class="app.entities.user.User" />
        <mapping class="app.entities.order.Item" />
        <mapping class="app.entities.order.Order" />
        <mapping class="app.entities.Beer" />
        <mapping class="app.entities.Container" />

    </session-factory>
</hibernate-configuration>